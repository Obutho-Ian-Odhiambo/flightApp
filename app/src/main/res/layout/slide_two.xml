<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/tv_skip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="end"
            android:text="Skip" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/relative_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27.5dp"
        android:orientation="vertical"
        android:layout_marginTop="65dp"
        android:layout_marginRight="27.5dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="244.3dp"
            android:src="@mipmap/eastwoodwaiting" />


        <TextView
            android:id="@+id/text_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:fontFamily="@font/poppins_extrabold"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="11sp"
            android:textColor="#1e2432"
            android:textSize="24sp"
            android:text=" NO more long boring layover hours spent at the airport" />

        <Button
            android:id="@+id/slidetwobtn"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Next" />


    </LinearLayout>


</RelativeLayout>